<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <h1>商品一覧</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>金額</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td><%= link_to '編集', edit_admin_product_path(product) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to '新規登録', new_admin_product_path %>
</div>
